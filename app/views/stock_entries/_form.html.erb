<%= form_with(model: stock_entry, local: false) do |form| %>
  <div class="modal-body">
		<ul class="errors">
    	</ul>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :medicament_family_id %>
        <%= form.collection_select(:medicament_family_id, @medicament_families,  :id, :name , {prompt: "Sélectionner"}, class: "form-control", style: "width: 100%",  required: true) %>

      </div>

      <div class="form-group">
        <%= form.label :medicament_id %>
      
        <%= form.collection_select(:medicament_id, @medicaments,  :id, :name , {prompt: "Sélectionner"}, class: "form-control", style: "width: 100%", required: true) %>

      </div>

      <div class="form-group">
        <%= form.label :reason %>
        <%= form.text_field :reason, class: "form-control", placeholder: "Motif", required: true %>
      </div>

      <div class="form-group">
        <%= form.label :provider_id %>
        <%= form.collection_select(:provider_id, @providers,  :id, :company , {prompt: "Sélectionner"}, class: "form-control", style: "width: 100%", required: true) %>

      </div>


    </div>

    <div class="col-md-6">
      

        <div class="form-group">
          <%= form.label :quantity %>
          <%= form.number_field :quantity , class: "form-control", placeholder: "Quantité", required: true  %>
        </div>

        <div class="form-group">
          <%= form.label :unit %>
          <%= form.text_field :unit , class: "form-control", placeholder: "Unité", required: true %>
        </div>

        <div class="form-group">
          <%= form.label :delivery_number %>
          <%= form.text_field :delivery_number , class: "form-control", placeholder: "N°BL", required: true %>
        </div>
    </div>
  </div>
 

  

  </div><!-- modal body -->
  <div class="modal-footer">
    <%= link_to "Annuler", "#", class: "btn btn-secondary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1", data: {dismiss: "modal"} %>
    <%= form.submit  class: "btn btn-primary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1",  "data-loading-text"=>"Loading...", autocomplete: "off" %>
  </div>
<% end %>
