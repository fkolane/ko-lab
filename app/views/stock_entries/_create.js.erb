$("ul.errors").html("");
<% if @stock_entry.errors.any? %>
  <% @stock_entry.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"));
  <% end %>
<% else %>
  $(".stock-entries").html("<%= escape_javascript(render 'index') %>");
  $("#stock-entry-modal").modal("hide");
 
<% end %>