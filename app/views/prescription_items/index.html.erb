<p id="notice"><%= notice %></p>

<h1>Prescription Items</h1>

<table>
  <thead>
    <tr>
      <th>Prescription</th>
      <th>Medicament</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prescription_items.each do |prescription_item| %>
      <tr>
        <td><%= prescription_item.prescription %></td>
        <td><%= prescription_item.medicament %></td>
        <td><%= link_to 'Show', prescription_item %></td>
        <td><%= link_to 'Edit', edit_prescription_item_path(prescription_item) %></td>
        <td><%= link_to 'Destroy', prescription_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

