$("ul.errors").html("");
<% if @sample_type.errors.any? %>
  <% @sample_type.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"));
  <% end %>
<% else %>
  $(".sample-types").html("<%= escape_javascript(render 'index') %>");
  $("#sample-type-modal").modal("hide");
 
<% end %>