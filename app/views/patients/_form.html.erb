<%= form_with(model: patient, local: false) do |form| %>
 
 <div class="modal-body">
		<ul class="errors">
    	</ul>

  	<!-- Fieldset informations -->
		<%= render "patients/partials/patient_basic_informations", form: form %>
       
  <!-- Fieldset address -->
	<%= render "patients/partials/patient_address_informations", form: form %>


    <!-- Fieldset assurances -->
			<%= render "patients/partials/patient_insurance_informations", form: form %>

  </div><!-- modal body -->
  <div class="modal-footer">
    <%= link_to "Annuler", "#", class: "btn btn-secondary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1", data: {dismiss: "modal"} %>
    <%= form.submit  class: "btn btn-primary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1",  "data-loading-text"=>"Loading...", autocomplete: "off" %>
  </div>
<% end %>
