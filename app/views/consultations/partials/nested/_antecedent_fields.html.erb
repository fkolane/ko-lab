<div class="accordion" id="accordionMedicalAntecedent">
	<div class="card">
        <div class="card-header" id="headingMedicalAntecedent">
            <h2 class="mb-0">
                <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseMedicalAntecedent" aria-expanded="true" aria-controls="collapseMedicalAntecedent">
                <div class="button-label">Antécédents </div>
                        </button>
            </h2>
        </div>

	    <div id="collapseMedicalAntecedent" class="collapse" aria-labelledby="headingMedicalAntecedent" data-parent="#accordionPhysicalExam">
            <div class="card-body">

                <%= form.fields_for :medical_antecedent do |f| %>
                    <!-- Fieldset informations -->
                    <fieldset>
                        <legend>Personnel (Médicaux) </legend>
                        <!-- row 1 -->
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <%= f.label t(:hta)  %>
                                    <%= f.check_box :hta  %>
                            
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <%= f.label t(:diabetes) %>
                                    <%= f.check_box :diabetes %>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <%= f.label t(:sickle_cell_disease) %>
                                    <%= f.check_box :sickle_cell_disease  %>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <%= f.label t(:asthma) %>
                                    <%= f.check_box :asthma %>
                                </div>
                            </div>
                        </div>

                        <!-- row 2 -->
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <%= f.label t(:tuberculosis)  %>
                                    <%= f.check_box :tuberculosis  %>
                            
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <%= f.label t(:ugd) %>
                                    <%= f.check_box :ugd %>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <%= f.label t(:others) %>
                                    <%= f.text_field :others , class: "form-control", placeholder: "Autres" %>
                                </div>
                            </div>

                            
                        </div>
                    </fieldset>

                <% end %>

                <%= form.fields_for :surgical_antecedent do |f| %>
                    <!-- Fieldset informations -->
                    <fieldset>
                        <legend>Personnel(Chirurgicaux) </legend>
                        <!-- row 1 -->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <%= f.label t(:present)  %>
                                    <%= f.select :present , [["Absent"], ["Présent"] ] , {prompt: "Sélectionner"}, class: "form-control", style: "width: 100%" %>

                            
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <%= f.label :name  %>
                                    <%= f.text_field :name, class: "form-control", placeholder: "Description"  %>
                            
                                </div>
                            </div>
                            

                           
                        </div>

                        
                    </fieldset>
                <% end %>


                <%= form.fields_for :obstetric_gynecologist_antecedent do |f| %>
                    <!-- Fieldset informations -->
                    <fieldset>
                        <legend>Personnel (Gynéco obstétricaux) </legend>
                        <!-- row 1 -->
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <%= f.label t(:pregnancy)  %>
                                    <%= f.number_field :pregnancy , class: "form-control" %>
                            
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <%= f.label t(:parity) %>
                                    <%= f.number_field :parity, class: "form-control" %>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <%= f.label t(:living) %>
                                    <%= f.number_field :living, class: "form-control"  %>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <%= f.label t(:abortion) %>
                                    <%= f.number_field :abortion, class: "form-control" %>
                                </div>
                            </div>
                        </div>

                        <!-- row 2 -->
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <%= f.label t(:death)  %>
                                    <%= f.number_field :death, class: "form-control"  %>
                            
                                </div>
                            </div>

                            

                            <div class="col-md-6">
                                <div class="form-group">
                                    <%= f.label t(:others) %>
                                    <%= f.text_field :others , class: "form-control", placeholder: "Autres" %>
                                </div>
                            </div>

                            
                        </div>
                    </fieldset>

                <% end %>


                <%= form.fields_for :family_antecedent do |f| %>
