<div class="accordion" id="accordionPhysicalExam">
	<div class="card">
    <div class="card-header" id="headingPhysicalExam">
      <h2 class="mb-0">
        <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapsePhysicalExam" aria-expanded="true" aria-controls="collapsePhysicalExam">
        <div class="button-label">Examen physique </div>
				</button>
      </h2>
    </div>

		<div id="collapsePhysicalExam" class="collapse" aria-labelledby="headingPhysicalExam" data-parent="#accordionPhysicalExam">
      <div class="card-body">


<%= form.fields_for :physical_exam do |f| %>
    <!-- Fieldset informations -->
    <fieldset>
    <legend>Examen physique </legend>
	    <!-- row 1 -->
	    <div class="row">
			<div class="col-md-3">
                <div class="form-group">
                    <%= f.label :inspection %>
                    <%= f.text_field :inspection, class: "form-control", placeholder: "Inspection" %>
            
                </div>
             </div>

			<div class="col-md-3">
				<div class="form-group">
                    <%= f.label :palpation %>
                    <%= f.text_field :palpation, class: "form-control", placeholder: "Palpation" %>
                </div>
            </div>

			<div class="col-md-3">
				<div class="form-group">
                    <%= f.label :percussion %>
                    <%= f.text_field :percussion , class: "form-control", placeholder: "Percussion" %>
                </div>
            </div>

			<div class="col-md-3">
                <div class="form-group">
                    <%= f.label :auscultation %>
                    <%= f.text_field :auscultation , class: "form-control", placeholder: "Auscultation" %>
                </div>
            </div>

			


        </div>
    </div>
<% end %>

</div>
		</div>
</div