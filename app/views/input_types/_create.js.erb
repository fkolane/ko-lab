$("ul.errors").html("");
<% if @input_type.errors.any? %>
  <% @input_type.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"));
  <% end %>
<% else %>
  $(".input-types").html("<%= escape_javascript(render 'index') %>");
  $("#input-type-modal").modal("hide");
 
<% end %>