<p id="notice"><%= notice %></p>

<h1>Surgical Antecedents</h1>

<table>
  <thead>
    <tr>
      <th>Present</th>
      <th>Name</th>
      <th>Consultation</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @surgical_antecedents.each do |surgical_antecedent| %>
      <tr>
        <td><%= surgical_antecedent.present %></td>
        <td><%= surgical_antecedent.name %></td>
        <td><%= surgical_antecedent.consultation %></td>
        <td><%= surgical_antecedent.status %></td>
        <td><%= link_to 'Show', surgical_antecedent %></td>
        <td><%= link_to 'Edit', edit_surgical_antecedent_path(surgical_antecedent) %></td>
        <td><%= link_to 'Destroy', surgical_antecedent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

