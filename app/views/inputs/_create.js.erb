$("ul.errors").html("");
<% if @input.errors.any? %>
  <% @input.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"));
  <% end %>
<% else %>
  $(".inputs").html("<%= escape_javascript(render 'index') %>");
  $("#input-modal").modal("hide");
 
<% end %>