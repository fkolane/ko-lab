        <td><%= physical_exam.percussion %></td>
        <td><%= physical_exam.auscultation %></td>
        <td><%= physical_exam.consultation %></td>
        <td><%= physical_exam.status %></td>
        <td><%= link_to 'Show', physical_exam %></td>
        <td><%= link_to 'Edit', edit_physical_exam_path(physical_exam) %></td>
        <td><%= link_to 'Destroy', physical_exam, method: :delete, data: { confirm: 'Are you sure?' } %></td>
