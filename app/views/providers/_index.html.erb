<% @providers.each do |provider| %>
      <tr>
        <td><%= provider.company %></td>
        <td><%= provider.contact_name %></td>
        <td><%= provider.address %></td>
        <td><%= provider.phone %></td>
        <td><%= provider.city %></td>
        <td><%= provider.country %></td>
        <!-- <td><%= provider.email %></td> -->
        <td>
		<div class="action-buttons">
				<%= link_to raw('<i class="fa fa-pencil" aria-hidden="true"></i>
'), edit_provider_path(provider), title: "Modifier", remote: true %>




<%= link_to raw('<i class="fa fa-trash-o" aria-hidden="true"></i>
'), provider_delete_path(provider), remote: true, title: "Supprimer", class: "delete" %>
</div>
</td>
      </tr>
    <% end %>