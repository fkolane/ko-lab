<%= form_with(model: provider, local: false) do |form| %>
  <div class="modal-body">
		<ul class="errors">
    </ul>

  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= form.label :company %>
        <%= form.text_field :company, class: "form-control", placeholder: "Nom structure", required: true  %>
      </div>

      <div class="form-group">
        <%= form.label :contact_name %>
        <%= form.text_field :contact_name, class: "form-control", placeholder: "Nom contact", required: true %>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-6">
       <div class="form-group">
          <%= form.label :address %>
          <%= form.text_field :address, class: "form-control", placeholder: "Adresse", required: true %>
        </div>

        <div class="form-group">
          <%= form.label :phone %>
          <%= form.text_field :phone, class: "form-control", placeholder: "Téléphone", required: true %>
        </div>

        <div class="form-group">
          <%= form.label :city %>
          <%= form.text_field :city, class: "form-control", placeholder: "Ville", required: true %>
        </div>

    </div>
    <div class="col-md-6">
      
      <div class="form-group">
        <%= form.label :country %>
        <%= form.text_field :country, class: "form-control", placeholder: "Pays", required: true %>
      </div>

      <div class="form-group">
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control", placeholder: "Email" %>
      </div>

    </div>

  </div>
 

  

  

 </div><!-- modal body -->
  <div class="modal-footer">
    <%= link_to "Annuler", "#", class: "btn btn-secondary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1", data: {dismiss: "modal"} %>
    <%= form.submit  class: "btn btn-primary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1",  "data-loading-text"=>"Loading...", autocomplete: "off" %>
  </div>

<% end %>
