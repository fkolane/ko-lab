<%= form_with(model: insurance_medicament, local: false) do |form| %>
  <div class="modal-body">
		<ul class="errors">
    	</ul>


  <div class="form-group">
    <%= form.label :insurance_id %>
    <%= form.collection_select(:insurance_id, @insurances,  :id, :name , {prompt: "Sélectionner une assurance" }, class: "form-control", style: "width: 100%", required: true) %>

  </div>

  <div class="form-group">
    <%= form.label :medicament_id %>
    <%= form.collection_select(:medicament_id, @medicaments,  :id, :name , {prompt: "Sélectionner un médicament" }, class: "form-control", style: "width: 100%", required: true) %>

  </div>

  <div class="form-group">
    <%= form.label :percentage %>
    <%= form.number_field :percentage, class: "form-control", required: true %>
  </div>

  
 </div><!-- modal body -->
  <div class="modal-footer">
    <%= link_to "Annuler", "#", class: "btn btn-secondary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1", data: {dismiss: "modal"} %>
    <%= form.submit  class: "btn btn-primary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1",  "data-loading-text"=>"Loading...", autocomplete: "off" %>
  </div>

<% end %>
