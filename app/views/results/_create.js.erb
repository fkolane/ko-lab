$("ul.errors").html("");
<% if @result.errors.any? %>
  <% @result.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"));
  <% end %>
<% else %>
  $(".results").html("<%= escape_javascript(render 'index') %>");
  $("#result-modal").modal("hide");
 
<% end %>