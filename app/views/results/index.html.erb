<p id="notice"><%= notice %></p>

<h1>Results</h1>

<table>
  <thead>
    <tr>
      <th>Analysis</th>
      <th>Sample type</th>
      <th>Analyse element</th>
      <th>Normal value</th>
      <th>Result value</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @results.each do |result| %>
      <tr>
        <td><%= result.analysis %></td>
        <td><%= result.sample_type %></td>
        <td><%= result.analyse_element %></td>
        <td><%= result.normal_value %></td>
        <td><%= result.result_value %></td>
        <td><%= result.comment %></td>
        <td><%= link_to 'Show', result %></td>
        <td><%= link_to 'Edit', edit_result_path(result) %></td>
        <td><%= link_to 'Destroy', result, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

