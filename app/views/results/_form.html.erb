<%= form_with(model: result, local: false) do |form| %>
   <div class="modal-body">
		<ul class="errors">
    	</ul>

      <%= form.hidden_field :receipt_id, value: @receipt.id %>
      <!-- Fieldset informations -->
        <fieldset>
          <legend>Liste des composants </legend>
          <div class="row">
            <div class="prescription-items">

              <table class="table  responsive ">
                <thead>
                  <tr role="row">
                  
                    <th>Composant</th>
                    <th>Valeur normale</th>
                    <th>Resultat</th>
                    <th>Commentaire</th>

                  </tr>
                </thead>
                  <tbody class="items">
                    <%= form.fields_for :result_items do |item| %>
                        <%= render 'result_item_fields', f: item %>
                    <% end %>
                  </tbody>
              </table>
            
            </div> 
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <%= link_to_add_association raw('<i class="fa fa-plus" aria-hidden="true"></i> Ajouter'), form, :result_items, class: 'btn btn-primary', data: { association_insertion_node: '.items', association_insertion_method: :append } %>
              </div>
            </div>
          </div>
      </fieldset>

    </div><!-- modal body -->
  <div class="modal-footer">
    <%= link_to "Annuler", "#", class: "btn btn-secondary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1", data: {dismiss: "modal"} %>
    <%= form.submit  class: "btn btn-primary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1",  "data-loading-text"=>"Loading...", autocomplete: "off" %>
  </div>
<% end %>
