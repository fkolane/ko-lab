<%= form_with(model: insurance, local: false) do |form| %>
  <div class="modal-body">
		<ul class="errors">
    	</ul>


 

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control", placeholder: "Nom", required: true %>
  </div>

  
      <div class="form-group">
        <%= form.label :limited %>
        <%= form.select :limited , YESNO, {prompt: "Sélectionner"}, class: "form-control", style: "width: 100%", required: true %>
  
      </div>
   

      <div class="form-group insurance_limit_age">
        <%= form.label :limit_age %>
        <%= form.text_field :limit_age, class: "form-control", placeholder: "Limite d'âge" %>
      </div>


  
  
   </div><!-- modal body -->
  <div class="modal-footer">
    <%= link_to "Annuler", "#", class: "btn btn-secondary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1", data: {dismiss: "modal"} %>
    <%= form.submit  class: "btn btn-primary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1",  "data-loading-text"=>"Loading...", autocomplete: "off" %>
  </div>
<% end %>
